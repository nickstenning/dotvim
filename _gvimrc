if has("gui_macvim")
    macm File.Close key=<nop>
    noremap  <silent> <D-w> <Esc>:bd<CR>
    noremap! <silent> <D-w> <Esc>:bd<CR>
    macm Window.Select\ Next\ Tab key=<nop>
    macm Window.Select\ Previous\ Tab key=<nop>
    noremap  <silent> <D-}> <Esc>:bn<CR>
    noremap! <silent> <D-}> <Esc>:bn<CR>
    noremap  <silent> <D-{> <Esc>:bp<CR>
    noremap! <silent> <D-{> <Esc>:bp<CR>
endif
